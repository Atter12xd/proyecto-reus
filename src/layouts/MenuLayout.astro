---
import '../styles/global.css';

const { title = "KAUSA BEATS 24 - Carta Digital" } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />
    <title>{title}</title>
    <meta name="description" content="Disfruta de la mejor comida peruana en KAUSA BEATS 24. Pollos a la brasa, chaufas, y más. Carta digital interactiva." />
    <meta name="theme-color" content="#000000" />
    <link rel="icon" href="/images/LogoOfy.jpeg" />
    
    {/* Preload de fuentes */}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700;900&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen bg-black text-yellow-100 overflow-x-hidden">
    {/* Patrón de fondo sutil */}
    <div class="fixed inset-0 opacity-5 pointer-events-none">
      <div class="absolute inset-0" style={{backgroundImage: "url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23facc15\" fill-opacity=\"0.1\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')"}}></div>
    </div>
    
    {/* Gradiente de fondo principal */}
    <div class="fixed inset-0 bg-gradient-to-br from-black via-neutral-900 to-zinc-900 pointer-events-none"></div>
    
    {/* Contenido principal */}
    <main class="relative z-10">
      <slot />
    </main>
    
    {/* Footer mejorado */}
    <footer class="relative mt-16 p-6 text-center">
      <div class="max-w-md mx-auto">
        <div class="h-px bg-gradient-to-r from-transparent via-yellow-600/30 to-transparent mb-6"></div>
        <p class="text-yellow-600/80 text-sm font-light">
          © {new Date().getFullYear()} KAUSA BEATS 24
        </p>
        <p class="text-yellow-700/60 text-xs mt-2">
          Hecho con ❤️ para nuestros clientes
        </p>
      </div>
    </footer>
    
    {/* Script para smooth scroll y active states */}
    <script>
      // Smooth scroll behavior
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        });
      });
      
      // Active state para navegación
      const sections = document.querySelectorAll('section[id]') as NodeListOf<HTMLElement>;
const navLinks = document.querySelectorAll('.nav-btn-mobile') as NodeListOf<HTMLElement>;

window.addEventListener('scroll', () => {
  let current = '';
  sections.forEach(section => {
    const sectionTop = section.offsetTop;
    const sectionHeight = section.clientHeight;
    if (scrollY >= sectionTop - 100) {
      current = section.getAttribute('id');
    }
  });
        
        navLinks.forEach(link => {
          link.classList.remove('active');
          if (link.getAttribute('href') === `#${current}`) {
            link.classList.add('active');
          }
        });
      });
    </script>
  </body>
</html>