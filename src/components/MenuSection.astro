---
const { title, description, id = "" } = Astro.props;
const [icon, ...restTitle] = title.split(" ");
---

<section id={id} class="my-12">
  <div class="flex items-center gap-3 mb-6">
    <span class="text-5xl sm:text-6xl drop-shadow-sm">{icon}</span>
    <h2 class="text-3xl sm:text-4xl font-black text-yellow-400 drop-shadow tracking-tight uppercase">
      {restTitle.join(" ")}
    </h2>
    <div class="flex-1 h-1 ml-2 bg-gradient-to-r from-yellow-600/40 via-yellow-400/30 to-transparent rounded-full" />
  </div>
  {description && (
    <p class="text-yellow-100/80 mb-5 text-base sm:text-lg">{description}</p>
  )}
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <slot />
  </div>
</section>